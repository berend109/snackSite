@page
@using snackSite.Models
@model snackSite.Pages.CRUDProducten.Index



<div class="row">
    <div class="col">
        <h1>Display Categories</h1>

        <a asp-page="@nameof(Create)" class="btn btn-primary">Create New Category</a>
        <hr>
        <table class="table table-striped">
            <tbody>
            @foreach (var producten in Model.Producten)
            {
                <tr>
                    <td>@producten.ProductNaam</td>
                    <td>
                        <a asp-page="@nameof(Delete)" asp-route-categoryId="@producten.ProductId" class="btn btn-danger">Delete</a> |
                        <a asp-page="@nameof(Update)" asp-route-categoryId="@producten.ProductId" class="btn btn-info">Update</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>

    </div>
</div>