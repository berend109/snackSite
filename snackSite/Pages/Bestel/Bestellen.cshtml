@*@page

@model snackSite.Pages.Bestel.Bestellen

@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/Bestellenstyle.css">
    <title>Bestellen</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">NHL Café</a>
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav"
                    aria-controls="navbarNav"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <i class="navbar-toggler-icon"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav  nav-tabs nav-fill">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/Bestel/Bestellen">Bestellen</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Bestel/Overzicht">
                            <text id="selectkleurnav">Overzicht</text>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Bestel/AllesBetalen">
                            <text id="selectkleurnav">Alles betalen</text>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Bestel/PerPersoonBetalen">
                            <text id="selectkleurnav">Per persoon betalen</text>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <h1>Bestellen</h1>

    <div class="row">
        <div class="col-3">
            <div class="list-group" id="list-tab" role="tablist">
                @foreach (var category in Model.Categories)
                {
                    <tr>
                        <a class="list-group-item list-group-item-action" id="list-@category.CategoryId-list" data-bs-toggle="list" href="#list-@category.CategoryId" role="tab" aria-controls="list-@category.CategoryId">@category.Name</a>
                    </tr>
                }
            </div>
        </div>

        <div class="col-3">
            <div class="tab-content" id="nav-tabContent">
                @foreach (var category in Model.Categories)
                {
                    <tr>
                        <div class="tab-pane fade show" id="list-@category.CategoryId" role="tabpanel" aria-labelledby="list-@category.CategoryId-list">
                            <ul class="list-group">
                                @foreach (var product in Model.Products)
                                {
                                    @if (@product.CategoryId == @category.CategoryId)
                                    {
                                        <li class="list-group-item d-flex justify-content-between">
                                            @product.Name
                                            <form method="POST">
                                                <input type="hidden" name="ProductId" value="@product.ProductId">
                                                <input type="hidden" name="Order_id" value="@Model.Order_id">
                                                <button class="addButton" type="submit" id="addbtn" style="border: none; background: transparent; color: deepskyblue;">
                                                    <i class="fa fa-plus-circle style"></i>
                                                </button>
                                            </form>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </tr>
                }
            </div>
        </div>

        <div class="col-6">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Product</th>
                        <th scope="col"></th>
                        <th scope="col">Amount</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var items in Model.BestellingItems)
                    {
                        <tr>
                            <td>@items.name</td>


                            <td></td>
                            <td>
                                <div class="container d-flex flex-row" id="BasketAmount">
                                    <form asp-page-handler="Decrease" method="post">
                                        <input type="hidden" name="ProductId" value="@items.ProductId">
                                        <input type="hidden" name="Order_id" value="@items.Order_id">
                                        <button id="decreaseButton" style=" background-color: transparent; border: none;">
                                            <i class='fa fa-minus-circle'></i>
                                        </button>
                                    </form>

                                    @items.Aantal

                                    <form asp-page-handler="Increase" method="post">
                                        <input type="hidden" name="ProductId" value="@items.ProductId">
                                        <input type="hidden" name="Order_id" value="@items.Order_id">
                                        <button id="increaseButton" style=" background-color: transparent; border: none;">
                                            <i class='fa fa-plus-circle'></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                            <td>
                                <form asp-page-handler="Delete" method="post">
                                    <input type="hidden" name="ProductId" value="@items.ProductId">
                                    <input type="hidden" name="Order_id" value="@items.Order_id">
                                    <button id="trashButton" style=" background-color: transparent; border: none;">
                                        <i class='fa fa-trash'></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

    <div class="container d-flex justify-content-end">
        <form asp-page-handler="Nextpage" method="post">
            <button id="Bestelbtn" style="background-color: #0d6efe; border: none;  border-radius: 8px; color: white; width: 70px; height: 35px;">Bestel</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>
</html>*@