@page
@model snackSite.Pages.Login
@{
	ViewData["Title"] = "Login";
}

<div class="container">

	<h1>@ViewData["Title"]</h1>
	
	<div class="shadow p-5">
		<div class="card text-start">
			<form class="row g-3 p-4" method="POST">
				<div class="form-floating mb-3 col-6">
					<input asp-for="Gebruiker!.Email" type="email" class="form-control" id="floatingInput"
					       placeholder="name@example.com" required>
					<label for="floatingInput">Email</label>
				</div>
				<div class="form-floating col-6">
					<input asp-for="Gebruiker!.Wachtwoord" type="password" class="form-control" id="floatingPassword"
					       placeholder="Password" required>
					<label for="floatingPassword">Password</label>
				</div>
				<div class="col-6">
					<button type="submit" class="btn btn-outline-success">Log in</button>
				</div>
				<div class="col-6">
					<a class="btn btn-outline-secondary" asp-area="" asp-page="/Register">Register</a>
				</div>
			</form>	
		</div>
	</div>
	
</div>