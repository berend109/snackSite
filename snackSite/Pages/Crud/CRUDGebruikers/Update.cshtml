@page "{gebruikerId:int}"
@model snackSite.Pages.CRUDGebruikers.Update

<div class="row">
    <div class="col ms-5 me-5">
        <h1>Bewerk gebruiker</h1>
        <form method="POST">
            <input type="hidden" asp-for="@Model.Gebruiker.GebruikerId" />
            <div class="form-group">
                <label asp-for="Gebruiker.Naam">Name:</label>
                <input asp-for="Gebruiker.Naam" class="form-control" />
                <span asp-validation-for="Gebruiker.Naam"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gebruiker.Wachtwoord">Wachtwoord:</label>
                <input asp-for="Gebruiker.Wachtwoord" class="form-control" />
                <span asp-validation-for="Gebruiker.Wachtwoord"></span>
            </div>
            <div>
            <label asp-for="Gebruiker.PasswordConfirm">Wachtwoord bevestiging:</label>
                <input asp-for="Gebruiker.PasswordConfirm" class=" form-control" />
            <span asp-validation-for="Gebruiker.PasswordConfirm"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gebruiker.Email">Prijs:</label>
                <input asp-for="Gebruiker.Email" class="form-control" />
                <span asp-validation-for="Gebruiker.Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gebruiker.Budget">Budget:</label>
                <input asp-for="Gebruiker.Budget" class="form-control" />
                <span asp-validation-for="Gebruiker.Budget"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gebruiker.Adminrole">Admin:</label>
                <input asp-for="Gebruiker.Adminrole" type="checkbox" class="form-check-input" />
                <span asp-validation-for="Gebruiker.Adminrole"></span>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-success">Update</button>
                <button asp-page-handler="Cancel" class="btn btn-danger">Cancel</button>
            </div>
        </form>
    </div>
</div>