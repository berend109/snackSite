@page "{productId:int}"
@model snackSite.Pages.CRUDProducten.Delete

@{
    ViewData["Title"] = "Verwijderen";
}

<div class="row">
    <div class="col ms-5 me-5">
        <h1>Wil je dit Product echt verwijderen @(Model.Product.ProductNaam)?</h1>
        <hr>
        <form method="POST">
            <button asp-page-handler="Delete" class="btn btn-success m-2 w-50">Ja</button>
            <button asp-page-handler="Cancel" class="btn btn-danger m-2 w-50">Nee</button>
        </form>
    </div>
</div>