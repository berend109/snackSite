@page "{aanbiederId:int}"
@model snackSite.Pages.CRUDAanbieders.Update

<div class="row">
    <div class="col">
        <h1>Update Category</h1>
        <form method="POST">
            <input type="hidden" asp-for="@Model.Aanbieder.AanbiederId" />
            <div class="form-group">
                <label asp-for="Aanbieder.Naam">Name:</label>
                <input asp-for="Aanbieder.Naam" class="form-control" />
                <span asp-validation-for="Aanbieder.Naam"></span>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-success">Update</button>
                <button asp-page-handler="Cancel" class="btn btn-danger">Cancel</button>
            </div>
        </form>
    </div>
</div>